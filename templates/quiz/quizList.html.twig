{% extends 'base_admin.html.twig' %}

{% block title %}Questions{% endblock %}

{% block body %}
    <h1 class="page-title">Question List</h1>

    {% include 'admin/_admin-main-button.html.twig' %}

    <ul class="quiz-list">
        {%  for quiz in quizzes %}
            <li class="quiz-item">
                {{ quiz.name }}
                <ul>
                    {% for i in range (0, 100) %}
                        {% if questions[loop.parent.loop.index - 1][i] is defined %}
                            <li>{{ questions[loop.parent.loop.index - 1][i].text }}</li>
                        {% endif %}
                    {% endfor %}
                </ul>
                <a href="{{ path('delete_quiz', {'id': quiz.id}) }}">Delete</a>
            </li>
        {% endfor %}
    </ul>

{% endblock %}
