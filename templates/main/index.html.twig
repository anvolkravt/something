{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/main-page.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/adminSection.css') }}">
{% endblock %}

{% block title %}Welcome!{% endblock %}

{% block body %}

<div class="main-container">
    <h1 class="page-title">Welcome to Quizzes!</h1>
    <h3 class="main-page-message">
        To take part in a quiz
        <a href="{{ path('app_login') }}">sign in</a>
        or
        <a href="{{ path('app_register') }}">register</a>
        .
    </h3>

    <ul class="quiz-list">
        <h4>Available Quizzes</h4>
        {%  for quizz in quizzes %}
            <li class="quiz-item">
                {{ quizz.name }}
            </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
